<div class="card" ng-show="state === 'cartable'">
    <div class="card-header">
        <span class="card-title">کارتابل مدیریت مجوزها</span>
        <button class="btn btn-success btn-circle pull-left" ng-click="goToPageAdd();"><i class="fa fa-plus"></i></button>

    </div>
    <div class="card-body">
        <tree-grid tree-data="tree.data"
                   col-defs="tree.colDefs"
                   expand-on="tree.expandingProperty"
                   expand-to="tree.expandTo"
                   icon-leaf="fa fa-circle-o"
                   icon-expand="fa fa-plus"
                   icon-collapse="fa fa-minus"></tree-grid>
    </div>
</div>
<div class="card" ng-show="['add','edit'].indexOf(state) !== -1">
    <div class="card-header">
        <span class="card-title" ng-show="state==='edit'">ویرایش</span>
        <span class="card-title" ng-show="state==='add'">افزودن</span>
    </div>
    <div class="card-body">
        <div class="form-horizontal">
            <div class="form-group">
                <label for="Type" class="control-label">نوع دستور</label>
                <div class="col-md-10">
                    <select class="form-control" ng-model="Model.Type">
                        <option ng-repeat="row in commandType" ng-value="row.Model">{{row.Name}}</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="CategorySub" class="control-label">نام لاتین</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" ng-required="true" ng-model="Model.FullName" />
                </div>
            </div>
            <div class="form-group">
                <label for="CategorySub" class="control-label">نام فارسی</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" ng-required="true" ng-model="Model.Title" />
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer pull-left">
        <button type="submit" ng-click="addCommand()" ng-show="state==='add'" class="btn btn-outline-success">افزودن</button>
        <button type="submit" ng-click="editCommand()" ng-show="state==='edit'" class="btn btn-outline-success">ویرایش</button>
        <a href="" ng-click="changeState.cartable()" class="btn btn-outline-primary">بازگشت</a>
    </div>
</div>