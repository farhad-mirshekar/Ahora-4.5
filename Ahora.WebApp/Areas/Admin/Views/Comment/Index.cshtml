<div class="card" ng-show="state ==='cartable'">
    <div class="card-header">
        <h2 class="main-title">کارتابل مدیریت نظرات محصولات</h2>
    </div>
    <div class="card-body">
        <portal-grid obj="grid"></portal-grid>
    </div>
</div>

<section ng-show="['add','edit'].indexOf(state) !== -1">
    <h2 class="main-title" ng-show="state ==='add'">افزودن</h2>
    <h2 class="main-title" ng-show="state ==='edit'">ویرایش</h2>
    <div class="card">
        <div class="card-body form-horizontal">
            <div class="form-group">
                <label for="CategorySub" class="control-label">نظر</label>
                <div class="col-md-10">
                    <textarea ckeditor="editorOptions" class="form-control" ng-model="Model.Body" name="body" rows="4" style="height: auto;" ng-required="false"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="CategorySub" class="control-label">وضعیت نظر</label>
                <div class="col-md-10">
                    <select class="form-control" ng-model="Model.CommentType">
                        <option ng-repeat="row in selectCommentType" ng-value="row.Model">{{row.Name}}</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="btn-group-justified pull-left">
                <button type="submit" ng-click="editComment()" class="btn btn-primary">ویرایش</button>
                <a href="#/comment/cartable" class="btn btn-cancel">بازگشت</a>
            </div>
        </div>
    </div>
</section>


<toaster-container toaster-options="{'position-class': 'toast-top-center', 'newest-ontop': 'false'}"></toaster-container>
