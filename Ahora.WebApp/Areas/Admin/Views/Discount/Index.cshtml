<section ng-show="state ==='cartable'">
    <button class="btn btn-success btn-circle pull-left" ng-click="goToPageAdd();"><i class="fa fa-plus"></i></button>
    <div class="card">
        <div class="card-header">
            <div class="pull-left" title="جست و جو" ng-click="search.searchPanel = !search.searchPanel"><i class="fa fa-search" aria-hidden="true"></i></div>
        </div>
        <div class="card-body" ng-show="search.searchPanel">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="Type" class="control-label">نام تخفیف</label>
                        <div class="input-group">
                            <input ng-model="search.Model.Name" maxlength="100" type="text" autofocus="" class="form-control meta" placeholder="نام تخفیف جهت جست و جو">
                            <div class="input-group-append">
                                <span class="input-group-text"> {{search.Model.Name.length > 0 ? search.Model.Name.length : 0}}/100</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="btn-group-justified pull-left">
                <button type="button" class="btn btn-primary" ng-click="grid.getlist();">جست و جو</button>
                <button type="button" class="btn btn-cancel" ng-click="search.clear();">پاک کردن</button>
            </div>
        </div>
    </div>
    <portal-grid obj="grid"></portal-grid>
</section>

<section ng-show="['add','edit'].indexOf(state) !== -1">
    <h2 class="main-title" ng-show="state ==='add'">افزودن</h2>
    <h2 class="main-title" ng-show="state ==='edit'">ویرایش</h2>
    <div class="card-body form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                <label for="Name" class="control-label">نام</label>
                <input type="text" class="form-control" ng-model="Model.Name" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="DiscountType" class="control-label">نوع تخفیف</label>
                <select class="form-control" ng-model="Model.DiscountType">
                    <option ng-repeat="row in selectDiscountType" ng-value="row.Model">{{row.Name}}</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="DiscountAmount" class="control-label">میزان تخفیف</label>
                <input type="text" class="form-control" ng-model="Model.DiscountAmount" />
            </div>
        </div>
    </div>
    <div class="btn-group-justified pull-left mb-5">
        <button type="submit" ng-click="editDiscount()" ng-if="state ==='edit'" class="btn btn-primary">ویرایش</button>
        <button type="submit" ng-click="addDiscount()" ng-if="state ==='add'" class="btn btn-success">افزودن</button>
        <button type="button" ng-click="main.changeState.cartable();" class="btn btn-cancel">بازگشت</button>
    </div>
</section>

<toaster-container toaster-options="{'position-class': 'toast-top-center', 'newest-ontop': 'false'}"></toaster-container>



