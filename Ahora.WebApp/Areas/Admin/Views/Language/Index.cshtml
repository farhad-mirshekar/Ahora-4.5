<section ng-show="state ==='cartable'">
    <button class="btn btn-success btn-circle pull-left" ng-click="main.changeState.add();"><i class="fa fa-plus"></i></button>
    <portal-grid obj="grid"></portal-grid>
</section>

<section ng-show="['add','edit'].indexOf(state) !== -1">
    <h2 class="main-title" ng-show="state==='add'">افزودن زبان</h2>
    <h2 class="main-title" ng-show="state==='edit'">ویرایش زبان</h2>
    <div id="languageSection">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div ng-show="Model.Errors.length" class="alert alert-danger">
                        <ul ng-repeat="row in Model.Errors">
                            <li>{{row}}</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body form-horizontal">
            <div class="form-group">
                <div class="col-md-10">
                    <label for="Title" class="control-label">نام زبان</label>
                    <input type="text" class="form-control" ng-model="Model.Name" placeholder="نام زبان را وارد نمایید">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label for="categoryID" class="control-label">نوع زبان</label>
                    <select class="form-control" ng-model="Model.LanguageCultureType">
                        <option ng-repeat="row in languageCultureType" ng-value="row.Model">{{row.Name}}</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label for="Description" class="ccontrol-label">عنوان سئو</label>
                    <input type="text" class="form-control" ng-model="Model.UniqueSeoCode" placeholder="عنوان سئو را وارد نمایید">
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label for="categoryID" class="control-label">فعال/غیرفعال</label>
                    <select class="form-control" ng-model="Model.Enabled">
                        <option ng-repeat="row in enableMenuType" ng-value="row.Model">{{row.Name}}</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <section class="card">
                        <div class="card-header">
                            کارتابل مقادیر زبان
                            <span ng-click="localeStringResource.openModalLocaleStringResource();" class="btn btn-outline-info pull-left mt-1"><i class="fa fa-plus"></i></span>

                        </div>
                        <div class="card-body">
                            <portal-grid obj="localeStringResource.grid"></portal-grid>
                        </div>
                    </section>
                </div>
            </div>
        </div>
        <div class="btn-group-justified pull-left mb-5">
            <button type="submit" ng-click="addLanguage()" ng-show="state==='add'" class="btn btn-success">ثبت</button>
            <button type="submit" ng-click="editLanguage()" ng-show="state==='edit'" class="btn btn-primary">ویرایش</button>
            <button ng-click="main.changeState.cartable();" class="btn btn-cancel">بازگشت</button>
        </div>
    </div>
</section>

<toaster-container toaster-options="{'position-class': 'toast-top-center', 'newest-ontop': 'false'}"></toaster-container>

<div class="modal fade grid-localeStringResource" dir="rtl"
     tabindex="-1"
     role="dialog"
     aria-labelledby="gridlocaleStringResource"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" dir="rtl">
            <div class="modal-header">
                <h4 class="modal-title" ng-show="localeStringResource.state === 'add'">افزودن</h4>
                <h4 class="modal-title" ng-show="localeStringResource.state === 'edit'">ویرایش</h4>
            </div>
            <div class="modal-body">
                <div class="container" id="localeStringResource">
                    <div class="row">
                        <div class="col-md-12">
                            <div ng-show="localeStringResource.Model.Errors.length" class="alert alert-danger">
                                <ul ng-repeat="row in localeStringResource.Model.Errors">
                                    <li>{{row}}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="CategorySub" class="control-label">نام فیلد</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control" ng-model="localeStringResource.Model.ResourceName" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="CategorySub" class="control-label">مقدار فیلد</label>
                    <div class="col-md-12">
                        <input type="text" class="form-control" ng-model="localeStringResource.Model.ResourceValue" />
                    </div>
                </div>
            </div>
            <div class="modal-footer pull-left">
                <button type="button" class="btn btn-success" ng-show="localeStringResource.state === 'add'" ng-click="localeStringResource.addLocaleStringResource();">ثبت</button>
                <button type="button" class="btn btn-primary" ng-show="localeStringResource.state === 'edit'" ng-click="localeStringResource.editLocaleStringResource();">ویرایش</button>
                <button class="btn btn-cancel" data-dismiss="modal">انصراف</button>
            </div>
        </div>
    </div>
</div>
