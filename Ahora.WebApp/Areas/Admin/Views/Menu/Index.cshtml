<div class="card" ng-show="state === 'cartable'">
    <div class="card-header">
        <span class="card-title">کارتابل مدیریت منو</span>
        <button class="btn btn-success btn-circle pull-left" ng-click="goToPageAdd();"><i class="fa fa-plus"></i></button>

    </div>
    <div class="card-body">
        <tree-grid tree-data="tree.data"
                   col-defs="tree.colDefs"
                   expand-on="tree.expandingProperty"
                   expand-to="tree.expandTo"
                   icon-leaf="fa fa-circle-o"
                   icon-expand="fa fa-plus"
                   icon-collapse="fa fa-minus"></tree-grid>
    </div>
</div>
<div class="card" ng-show="['add','edit'].indexOf(state) !== -1">
    <div class="card-header">
        <span class="card-title" ng-show="state==='edit'">ویرایش</span>
        <span class="card-title" ng-show="state==='add'">افزودن</span>
    </div>
    <div class="card-body">
        <div class="form-horizontal">
            <div class="form-group">
                <label for="CategorySub" class="control-label">نام منو</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" ng-required="true" ng-model="Model.Name" />
                </div>
            </div>
            <div class="form-group">
                <label for="CategorySub" class="control-label">آدرس</label>
                <div class="col-md-10">
                    <input type="text" class="form-control" ng-required="true" ng-model="Model.Url" />
                </div>
            </div>
            <div class="form-group">
                <label for="CategorySub" class="control-label">اولویت نمایش</label>
                <div class="col-md-10">
                    <input type="number" class="form-control" ng-required="true" ng-model="Model.Priority" />
                </div>
            </div>
            <div class="form-group">
                <label for="CategorySub" class="control-label">
                    آیکون
                    <i class="fa fa-info" data-container="body" title="نحوه استفاده از آیکن ها" data-toggle="popover" data-placement="left" data-content="برای استفاده شما می توانید به سایت http://www.google.com مراجعه کرده و آیکن مورد نظر خود را انتخاب نمایید">
                    </i>
                </label>
                <div class="col-md-10">
                    <input type="text" class="form-control" ng-required="true" ng-model="Model.IconText" />
                </div>
            </div>
            <div class="form-group">
                <label for="CategorySub" class="control-label">نمایش در لیست</label>
                <div class="col-md-10">
                    <input type="checkbox" class="form-control" ng-required="true" ng-model="Model.Enabled" />
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer pull-left">
        <button type="submit" ng-click="addMenu()" ng-show="state==='add'" class="btn btn-outline-success">افزودن</button>
        <button type="submit" ng-click="editMenu()" ng-show="state==='edit'" class="btn btn-outline-success">ویرایش</button>
        <a href="" ng-click="changeState.cartable()" class="btn btn-outline-primary">بازگشت</a>
    </div>
</div>
<script>
    $(function () {
        $('[data-toggle="popover"]').popover({
            trigger:'hover'
        })
})
</script>
