<div class="card" ng-show="state ==='cartable'">
    <div class="card-header">
        <h2 class="main-title">کارتابل مدیریت ویژگی های محصولات</h2>
        <button class="btn btn-success btn-circle pull-left" ng-click="goToPageAdd();"><i class="fa fa-plus"></i></button>

    </div>
    <div class="card-body">
        <portal-grid obj="grid"></portal-grid>
    </div>
</div>

<div class="card" ng-show="['add','edit'].indexOf(state) !== -1">
    <div class="card-header">
        <h2 class="main-title" ng-show="state ==='add'">افزودن</h2>
        <label class="main-title" ng-show="state ==='edit'">ویرایش</label>
    </div>
    <div class="card-body form-horizontal">
        <div class="form-group alert alert-danger" ng-show="Model.Errors.length">
            <ul ng-repeat="row in Model.Errors">
                <li>{{row}}</li>
            </ul>
        </div>
        <div class="form-group">
            <label for="Name" class="control-label">نام</label>
            <div class="col-md-10">
                <input type="text" class="form-control" ng-model="Model.Name" />
            </div>
        </div>
        <div class="form-group">
            <label for="Name" class="control-label">توضیحات</label>
            <div class="col-md-10">
                <input type="text" class="form-control" ng-model="Model.Description" />
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="btn-group-justified pull-left">
            <button type="submit" ng-click="addAttribute()" class="btn btn-outline-success">ثبت ویژگی</button>
            <a href="#/attribute/cartable" class="btn btn-outline-primary">بازگشت</a>
        </div>
    </div>
</div>

<toaster-container toaster-options="{'position-class': 'toast-top-center', 'newest-ontop': 'false'}"></toaster-container>



