@model FM.Portal.Core.Model.UserAddress
@{
    ViewBag.Title = "ویرایش آدرس";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<h2 class="main-title">ویرایش آدرس</h2>
<div class="card-body form-horizontal">
    @using (Html.BeginForm("Edit", "Address", FormMethod.Post))
    {

        <div class="form-group">
            <div class="col-md-10">
                <label for="postalCode" class="control-label">کد پستی</label>
                @Html.TextBoxFor(a => a.PostalCode, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="Address" class="control-label">آدرس</label>
                @Html.TextAreaFor(a => a.Address, htmlAttributes: new { rows = "2", @class = "form-control", @style = "resize:none;" })
            </div>
        </div>
        <div class="btn-group-justified pull-left mb-5">
            <button type="submit" class="btn btn-success">ویرایش</button>
            <a href="@Url.RouteUrl("User_AddressList")" class="btn btn-cancel">بازگشت</a>
        </div>
    }
</div>


