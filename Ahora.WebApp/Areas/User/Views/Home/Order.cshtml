@model List<FM.Portal.Core.Model.PaymentListForUserVM>
@{
    ViewBag.Title = "سفارش های من";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}
<h2 class="main-title">سفارش های من</h2>
<div class="card">
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>شماره سفارش</th>
                    <th>تاریخ ثبت سفارش</th>
                    <th>مبلغ کل (تومان)</th>
                    <th>جزئیات</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int row = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@row</td>
                            <td>@item.TrackingCode</td>
                            <td>@item.CreationDatePersian</td>
                            <td>@item.Price</td>
                            <td>@Html.ActionLink("مشاهده جزئیات", "OrderDetail", "Home",new { PaymentID = item.ID , Area="User"},new { @class="btn btn-primary"})</td>
                        </tr>
                        { row = row + 1;}
                    }
                }
            </tbody>
        </table>
    </div>
</div>
