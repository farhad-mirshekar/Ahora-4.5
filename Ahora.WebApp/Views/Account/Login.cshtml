@model FM.Portal.Core.Model.LoginVM
<!--================login_part Area =================-->
@section BodySection{
    <section class="row">
        <div class="col-md-7">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 col-md-12 col-lg-7 mx-auto">
                        <div class="card card-signin my-5">
                            <div class="card-body">
                                <h5 class="card-title text-center">@T("Account.Login.Title")</h5>
                                <form class="form-horizontal" id="loginform">
                                    <div class="form-group">
                                        <label for="Title" class="control-label">@T("Account.Login.Field.Username")</label>
                                        <div class="col-md-12">
                                            <input type="text" class="form-control" id="Username" required value="" placeholder="@T("Account.Login.Field.Username.Placeholder")">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="Title" class="control-label">@T("Account.Login.Field.Password")</label>
                                        <div class="col-md-12">
                                            <input type="password" class="form-control" id="Password" required value="" placeholder="@T("Account.Login.Field.Password.Placeholder")">
                                        </div>
                                    </div>
                                    <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">@T("Account.Login.LoginButton")</button>
                                    <a href="@Url.RouteUrl("SignUp")" class="btn btn-lg btn-default btn-block">
                                        <i class="fa fa-user"></i>
                                        @T("Account.Login.Newuser")
                                    </a>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <img src="~/Content/img/login.jpg" class="img-responsive w-100" />
        </div>
    </section>
}
<!--================login_part end =================-->


@section scripts{
    <script>
        (() => {
            var loginform = $('#loginform');
            loginform.submit(function (e) {
                e.preventDefault();
                $.ajax({
                    url: '/account/login',
                    type: 'POST',
                    data: {
                        username: $('#Username').val(),
                        password: $('#Password').val()
                    },

                    success: function (data) {
                        if (data.status) {
                            if (data.type == 2) {
                                if (data.url !== null)
                                    window.location.href = data.url;
                                else
                                    window.location.href = '/home/index';
                            } else {
                                localStorage.setItem('authorizationData', data.authorizationData);
                                localStorage.setItem('currentUserPosition', data.currentUserPosition);
                                localStorage.setItem('currentUserPositions', data.currentUserPositions);
                                window.location.href = '/admin';
                            }

                        }
                        else
                            alert('خطا');
                    },
                    error: function () {
                        alert("خطا در ورود");
                    }
                });
            })
        })();
    </script>
}