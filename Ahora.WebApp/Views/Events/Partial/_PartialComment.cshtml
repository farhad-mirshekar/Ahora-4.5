@using FM.Portal.FrameWork.MVC.Helpers.TreeView;
@model Ahora.WebApp.Models.Ptl.EventsCommentListModel
@using System.Globalization
@using FM.Portal.Core.Common;
@{ var pc = new PersianCalendar();}
@(Html.TreeView(Model.AvailableComments)
.EmptyContent($"<i>{T("Events.Comment.FirstComment")}</i>")
.Children(c => c.Children)
.HtmlAttributes(new { id = "tree" })
.ChildrenHtmlAttributes(new { @class = "subItem" })
.ItemText(c => c.CreatorName)
.ItemTemplate(
    @<text>
        <div class="card">
            <div class="card-header">
                <div class="d-inline">
                    <div class="mr-2 d-inline">
                         <span><i class="fa fa-calendar text-success"></i>@T("Events.Comment.Field.Date")</span>
                         <span>@($"{Helper.GetPersianYear(item.CreationDate)}/{Helper.GetPersianMonth(item.CreationDate)}/{Helper.GetPersianDay(item.CreationDate)}")</span>
                    </div>
                    <div class="mr-2 d-inline">
                         <span><i class="fa fa-dashboard text-info"></i>@T("Events.Comment.Field.Time")</span>
                         <span>@($"{pc.GetHour(item.CreationDate.Value)}:{pc.GetMinute(item.CreationDate.Value)}")</span>
                    </div>
                    <div class="pull-left">
                        <span><i class="fa fa-thumbs-up text-success"></i></span>
                        <span id="comment-like-count-@(item.ID)">@item.LikeCount</span>
                        <span><i class="fa fa-thumbs-down text-danger"></i></span>
                        <span id="comment-dislike-count-@(item.ID)">@item.DisLikeCount</span>
                    </div>

                </div>

            </div>
            <div class="card-body">
                <div class="col-md-12" id="body_comment">
                    @Html.Raw(item.Body)
                </div>
            </div>
            <div class="card-footer clearfix">
                <div class="pull-right">
                    <div class="comment-like-link btn btn-success" title="@T("Events.Comment.Field.Like")">
                        <span><i class="fa fa-thumbs-up" style="top: 4px;"></i></span>
                        <span data-href="@Url.RouteUrl("LikeEventsComment", new {CommentID=@item.ID })" data-comment-id="@item.ID">@T("Events.Comment.Field.Like")</span>
                    </div>

                    <div class="comment-like comment-like-link btn btn-danger" title="@T("Events.Comment.Field.DisLike")">
                        <span><i class="fa fa-thumbs-down" style="top: 4px;"></i></span>
                        <span data-href="@Url.RouteUrl("DisLikeEventsComment",new {CommentID=@item.ID })" data-comment-id="@item.ID">@T("Events.Comment.Field.DisLike")</span>
                    </div>
                    <div id="comment-like-result-@(item.ID)" class="mt-2"></div>
                </div>
                @if (Model.Events.CommentStatusType == CommentStatusType.باز)
                {
                    <div class="pull-left">
                        @Ajax.ActionLink(T("Events.Comment.Button.Reply").ToString(), "AddEventsComment", "Events", new { DocumentID = Model.Events.ID, ParentID = @item.ID  }, new AjaxOptions { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "comment-reply-" + @item.ID, OnBegin = "CommentReply.onBegin" }, new { rel = "nofollow",@class="btn btn-primary" })
                    </div>
                }

                <div class="clear clearfix"></div>
                <div id="comment-reply-@(item.ID)" class="comment-reply-container mt-4" style="display: none;"></div>
            </div>
        </div>
    </text>)
)

@if (Model.Events.CommentStatusType == CommentStatusType.باز && Model.User != null)
{
    <div style="text-align: center;" class="comment-reply-container">
        @Ajax.ActionLink(T("Events.Comment.Button.PostComment").ToString(), "AddEventsComment", "Events", new { EventsID = Model.Events.ID }, new AjaxOptions { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "addComment", OnSuccess = "AddComment.slideToggle", LoadingElementDuration = 300, LoadingElementId = "loadingMessage" }, new { @class = "btn btn-success", style = "width:80%;", rel = "nofollow" })
    </div>
}
else
{
    if (Model.User == null)
    {
        <div class="alert alert-info text-center">
            <span>@T("Events.Comment.Error.YouMustBeLoggedIn")</span>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <span>@T("Events.Comment.Error.CommentsAreClosed")</span>
        </div>
    }
}
<div id="addComment">
</div>
<script src="~/Scripts/custom/comment.js"></script>
