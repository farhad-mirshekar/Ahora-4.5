@model List<FM.Portal.Core.Model.FAQ>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section bannerSection{
    <!-- breadcrumb part start-->
    <section class="breadcrumb_part">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <h2>پاسخ</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb part end-->
}
@section bodySection{
    <div class="col-lg-12" style="margin-top:150px;padding-bottom:100px;">
        <div class="panel panel-default">
            <div class="panel-body">

                <div class="form-group" id="accordion">

                    @foreach (var item in Model)
                    {
                        <div class="panel panel-default" style="padding-bottom:10px">
                            <div class="panel-heading heading-faq" data-target="#@item.ID" aria-controls="@item.ID" aria-expanded="false" data-parent="#accordion" data-toggle="collapse">
                                <span class="panel-title">@item.Question</span>
                            </div>
                            <div class="panel-body collapse panel-collapse" id="@item.ID">
                                <p>@item.Answer</p>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
}

