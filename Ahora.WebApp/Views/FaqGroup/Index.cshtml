@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<FM.Portal.Core.Model.FaqGroupListVM>
@section bannerSection{
    <!-- breadcrumb part start-->
    <section class="breadcrumb_part">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb_iner">
                        <h2>پرسش های متداول</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb part end-->
}
@section bodySection{
    <!--================Blog Area =================-->
   <div class="col-lg-12" style="margin-top:150px;padding-bottom:100px;">
              <div class="row">
                  @{
                      foreach (var item in Model)
                      {
                          <div class="col-lg-6 select" data-value="@item.ID">
                              <ul class="list-group">
                                  <li class="list-group-item">
                                      @item.Title
                                      <span class="badge">@item.Total</span>
                                  </li>
                              </ul>
                          </div>
                      }
                  }
      </div>
    </div>
    <!--================Blog Area =================-->
}
@section scripts{
    <script>
        (() => {
            var select = $('.select');
            select.each(function (index) {
                var $this = $(this);
                $this.on('click', function () {
                    var value = $this.data('value');
                    window.location.href = `/faq/index/${value}`;
                })
            })
        })();
    </script>
}
