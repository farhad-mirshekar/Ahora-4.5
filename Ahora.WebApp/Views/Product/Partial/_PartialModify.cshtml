@model Ahora.WebApp.Models.App.ProductCommentModel
<div>
    <!--begin form-->
    @using (Ajax.BeginForm("AddProductComment", "Product", new AjaxOptions { HttpMethod = "POST", OnSuccess = "AddComment.onSuccess", LoadingElementId = "loadingMessage", LoadingElementDuration = 300 }, new { @class = "form-horizontal", id = "frmCommentReply" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("ParentID",Model.ParentID)
        @Html.Hidden("ID", Model.ID)

        <div class="form-group">
            <div class="col-md-12">
                @Html.TextAreaFor(c => c.Body, new { @class = "form-control", cols = "10", placeholder = $"{T("Product.Comment.Body")}" })
                @Html.ValidationMessageFor(c => c.Body, null, new { @class = "text-danger mt-2" })
            </div>
        </div>
        <button type="submit" class="btn btn-success pull-left">ارسال</button>
    }
    <div class="clearfix"></div>
    <div id="addCommentResult" class="text-center mt-3"></div>
    <!--end form-->
    <div class="clear"></div>
</div>

<script>
    $(function () {
        AjaxForm.EnableAjaxFormvalidate('frmCommentReply');
        AjaxForm.EnablePostbackValidation();
        AjaxForm.EnableBootstrapStyleValidation();
    })
</script>