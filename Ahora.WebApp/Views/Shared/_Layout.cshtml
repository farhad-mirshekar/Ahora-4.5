<!doctype html>
<html lang="fa">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>
    @RenderSection("Metatag", false)
    @Styles.Render("~/bundles/bootstrap4")
    @Styles.Render("~/bundles/main")
    @Styles.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/mainSite")
    @Scripts.Render("~/bundles/bootstrap4js")
    @RenderSection("Head", false)
</head>

<body dir="rtl">
    <div class="container-fluid">
        <header class="sticky-top py-1">
            <div class="row">
                <div class="col-md-10">
                    @{Html.RenderAction("RenderMenu", "Common"); }
                </div>
                <div class="col-md-2">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12 d-inline-block">
                                @{ Html.RenderAction("LanguageSelector", "Common");}
                                @{ Html.RenderAction("ShoppingCartItemCount", "Common");}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @RenderSection("SearchSection", false)
        </header>
        @RenderSection("BannerSection", false)

        <main role="main">
            @RenderSection("BodySection", false)
            @RenderBody()
        </main>
    </div>
    @Html.Action("RenderFooter", "Common")

    <script>
        $('a.dropdown-toggle').on('click', function (e) {
            if (!$(this).next().hasClass('show')) {
                $(this).parents('.dropdown-menu').first().find('.show').removeClass("show");
            }
            var $subMenu = $(this).next(".dropdown-menu");
            $subMenu.toggleClass('show');
            $(this).parents('li.nav-item.dropdown.show').on('hidden.bs.dropdown', function (e) {
                $('.dropdown-submenu .show').removeClass("show");
            });
            return false;
        });
    </script>
    @RenderSection("scripts", required: false)

</body>

</html>