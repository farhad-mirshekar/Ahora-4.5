@model List<ShoppingItemVM>
@{
    ViewBag.Title = "سبد خرید";
}
@section bodySection{
    @if (Model != null && Model.Count > 0)
    {
        @Html.Partial("_PartialBasket", Model)

        @Html.Partial("_PartialUserAddress")
    }
    else
    {
        { Html.RenderAction("CartEmpty", "ShoppingCart"); }
    }
}

    @section scripts{
        <script src="~/scripts/custom/Quantity.js"></script>
    }