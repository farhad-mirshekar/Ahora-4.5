@model Ahora.WebApp.Models.App.ShoppingCartItemListModel
@{
    ViewBag.Title = T("Shopping.Page.Title");
}
@section bodySection{
    @if (Model.AvailableShoppingCartItem != null && Model.AvailableShoppingCartItem.Count > 0)
    {
        <div id="load"></div>
        @Html.Partial("~/Views/ShoppingCart/Partial/_PartialBasket.cshtml", Model)

        @Html.Partial("~/Views/ShoppingCart/Partial/_PartialUserAddress.cshtml", Model)
    }
    else
    {
        { Html.RenderAction("CartEmpty", "ShoppingCart"); }
    }
}

@section scripts{
    <script src="~/scripts/custom/Quantity.js"></script>
}